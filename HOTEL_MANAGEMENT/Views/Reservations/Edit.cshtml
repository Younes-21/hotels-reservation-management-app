@model HOTEL_MANAGEMENT.Models.Reservation



@{
    ViewBag.Title = "Edit";
}
<h3 class="text-center text-uppercase text-danger"><b>@ViewBag.ErrorReservation</b></h3>
<table align="center">
    <tr>
        @using (Html.BeginForm("Edit", "Reservations", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id_Reservation)
            @Html.HiddenFor(model => model.Id_Room)
            @Html.HiddenFor(model => model.Date_Reservation)
            @Html.HiddenFor(model => model.Id_user)
            @Html.HiddenFor(model => model.Bill)
            <td>
                <div class="form-horizontal">
                    <h4>Edit Reservation</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id_Reservation)



                    <div class="form-group">
                        @Html.LabelFor(model => model.Date_Begin, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.Date_Begin, new { htmlAttributes = new { type = "date", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Date_Begin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Date_End, htmlAttributes: new { @class = "control-labe" })
                        <div>
                            @Html.EditorFor(model => model.Date_End, new { htmlAttributes = new { type = "date", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Date_End, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Bill, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.Bill, new { htmlAttributes = new { @disabled = "disabled", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bill, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="button" />
                        </div>
                    </div>
                </div>
            </td>
            <td><div>&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;</div></td>
            <td><div> <img src="~/Images/CreateReservation.png" width="300" height="300" /></div></td>
        }
    </tr>
</table>

@Html.ActionLink("Back to List", "Index")
<style>
    .button {
        background-color: #1781A6;
        border: none;
        border-radius: 10px;
        color: white;
        padding: 6px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
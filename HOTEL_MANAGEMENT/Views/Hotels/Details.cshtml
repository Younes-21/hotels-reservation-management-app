@using HOTEL_MANAGEMENT.Models
@model dynamic
@{
    ViewBag.Title = "DisplayHotel";
}

<link href="~/Content/StyleDetailsHotel.css" rel="stylesheet" type="text/css" media="screen" runat="server" />

<div style="padding: 5% 2%;">
    <h2 class="text-uppercase text-center">
        <b>
            <em style="color: #1781A6;">@Model.Hotels.Name_Hotel hotel</em>
        </b>
    </h2>
    <h4 class="text-uppercase text-center" style="padding-bottom: 2%;">
        @for (int i = 0; i < Model.Hotels.Stars; i++)
        {
            <span class="text-center glyphicon glyphicon-star" style="color: orange;"></span>
        }
        @for (int i = Model.Hotels.Stars; i < 5; i++)
        {
            <span class="text-center glyphicon glyphicon-star"></span>
        }
    </h4>
</div>


<section class="section" style="/*background:#00ff21;*/ padding: 2% 2%;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12 col-lg-7 ml-auto " style="/*background:#ff0000;*/">

                <img class="img-rounded" src=@Model.Hotels.Image_Hotel alt="@Model.Hotels.Name_Hotel"><br />
                <i class="fas fa-phone-rotary"></i>
                <h5>
                    <i style="color: #1781A6" class="fas fa-map-marked-alt fa-2x"></i> &nbsp; @Model.Hotels.Address_Hotel &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <i style="color: #1781A6" class="fad fa-phone-office fa-2x"></i> &nbsp; @Model.Hotels.Telephone
                </h5>
            </div>

            <div class="col-md-12 col-lg-4 order-lg-1 aos-init aos-animate" style="/*background:#ff6a00*/">
                <h2 class="heading">Welcome <em>to</em> <b style="color: #1781A6;">@Model.Hotels.Name_Hotel</b> Hotel </h2>
                <p class="lead">@Model.Hotels.Description_Hotel</p>
                <p class="">
                    @*<input type="submit" value="Booking" class="btn btn-lg btn-block" style="background: #1781A6; color: white;/* */" />*@
                    <a href="/Reservations/Create" class="btn btn-lg text-uppercase reserve" style="/*width: 90%;background: #1781A6; color: white; */" >reserve</a>
                </p>
            </div>
        </div>
    </div>
</section>

<section class="d-flex justify-content-center" style="/*background:#b200ff;*/ padding: 2.5%;">

    <h2 class="text-center text-dark text-uppercase mt-4" style="padding:2.5%; /*background:white*/">
        <b style="color: #1781A6;">our gallery</b>
    </h2>

    <div class="container-fluid center-block" style="/*background:yellow;*/">
        <div class="row" style="/*background:gray;*/ padding-bottom: 2%;">
            @foreach (Room item in Model.Rooms)
            {
                @*<a class="column" href="@Url.Action("Details", "Rooms", new { id = item.Id_Room })">
                    <img src=@item.Image_Room alt="" />
                </a>*@
                <a class="column" href="/Rooms/Details/@item.Id_Room">
                    <img src=@item.Image_Room alt="" />
                </a>
            }
        </div>
        <a href="/Rooms" style="float: right;margin-right: -8px;" class="btn btn-primary">
            <i class="far fa-eye"></i>
            <b>See more</b>
        </a>
        @if (Session["Id_user"] != null && Session["Roles"]!= null && Session["Roles"].ToString().ToLower() == "true")
        {
            <a href="/Rooms/Create" style="float: right;margin-right: 8px;" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                <b>Add room</b>
            </a>
        }

    </div>
</section>



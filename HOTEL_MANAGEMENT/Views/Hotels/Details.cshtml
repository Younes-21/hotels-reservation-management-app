<section style="padding: 2.5% 0%;">
    <h2 class="text-center text-dark text-uppercase mt-4" style="padding: 2.5%; margin-bottom: 4%;">
        <b style="color: #1781A6;">reviews</b>
    </h2>
    <div class="container">
        <div class="row" style="padding: 1%;">

            <div class="col-6 col-md-6">
                <img style="width:110%; height:400px;" src="@Url.Content("~/Images/comment.png")" alt="Views folder" />
            </div>

            <div class="col-6 col-md-6" style="background: #fbfbfbfb;padding: 1% 4%; border-radius: 5%;border:solid gray 0.5px;">

                <h3 class="text-center text-uppercase" style="padding: 2% 0">
                    <b>guest reviews</b>
                </h3>
                <div style="padding: 0% 0">
                    @using (Html.BeginForm("Create", "Comments", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()

                        <input required class="form-control" style="width: 1000px; float: left;" type="text" name="comment" />

                        <input class="form-control" style="width: 1000px; float: left;" type="hidden" name="id_Hotel" value=@Model.Hotels.Id_Hotel />

                        <input style="float: right;" type="submit" value="Add Review" id="submitButn" class="btn btn-default" />
                    }
                </div>
                <div style="padding: 4% 0%;margin-top: 12%; width:100%; height:230px; overflow:scroll;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Comment</th>
                                <th scope="col">Prediction</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int r = 1;
                                foreach (Comment item in Model.Comments)
                                {
                                    <tr>
                                        <th scope="row">@r</th>
                                        <td>@item.User.First_Name</td>
                                        <td>@item.Comment1</td>
                                        <td>
                                            @if (item.Opinion)
                                            {
                                                <i style="color: mediumseagreen" class="fas fa-smile-beam fa-2x"></i>
                                            }
                                            else
                                            {
                                                <i style="color:tomato" class="fas fa-meh fa-2x"></i>
                                            }
                                        </td>
                                        <td>
                                            @if (Session["Id_user"] != null && Int32.Parse(Session["Id_user"].ToString()) == item.Id_user)
                                            {
                                                <a href="/Comments/Edit/@item.Id_Comment" style="color: #45465F" title="Edit"><i class="fas fa-edit"></i></a>
                                                <a href="/Comments/Delete/@item.Id_Comment" style="color: #45465F" title="Delete"><i class="fas fa-trash-alt"></i></a>
                                            }
                                            @if (Session["Id_user"] != null && Session["Roles"]!= null && Session["Roles"].ToString().ToLower()== "true" && Int32.Parse(Session["Id_user"].ToString()) != item.Id_user)
                                            {
                                                @*<a href="/Comments/Edit/@item.Id_Comment" style="color: #45465F" title="Edit"><i class="fas fa-edit"></i></a>*@
                                                <a href="/Comments/Delete/@item.Id_Comment" style="color: #45465F" title="Delete"><i class="fas fa-trash-alt"></i></a>
                                            }
                                        </td>
                                    </tr>
                                    r = r + 1;
                                }
                            }
                        </tbody>
                    </table>
                    @*<a href="@Url.Action("Index", "Comments")" style="float:right;color:#1781A6">See more</a>*@
                </div>

            </div>
        </div>
    </div>
</section>
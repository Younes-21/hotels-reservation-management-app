@model HOTEL_MANAGEMENT.Models.Hotel



@{
    ViewBag.Title = "Edit";
}
<div style="height: 550px; margin-top: 8%;">

    <hr />
    <table align="center" style="">
        <tr>
            @using (Html.BeginForm("Edit", "Hotels", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <td>
                    <div align="center" class="form-group">



                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id_Hotel)



                        <div class="form-group" >
                            @Html.LabelFor(model => model.Name_Hotel, htmlAttributes: new { @class = "control-label col-md-5 " })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.Name_Hotel, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name_Hotel, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            @Html.LabelFor(model => model.Address_Hotel, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.Address_Hotel, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address_Hotel, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            @Html.LabelFor(model => model.City_Hotel, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.City_Hotel, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                                @Html.ValidationMessageFor(model => model.City_Hotel, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            @Html.LabelFor(model => model.Stars, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.Stars, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Stars, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Description_Hotel, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.Description_Hotel, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description_Hotel, "", new { @class = "text-danger" })

@model IEnumerable<HOTEL_MANAGEMENT.Models.Hotel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name_Hotel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address_Hotel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City_Hotel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stars)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description_Hotel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image_Hotel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number_Room)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.First_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name_Hotel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address_Hotel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City_Hotel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stars)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description_Hotel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image_Hotel)
            <img src="" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number_Room)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.First_Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id_Hotel })<br />
            @if (Session["Id_user"] != null && Session["Roles"].ToString() == "True")
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_Hotel })<br />
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_Hotel })
            }
        </td>
    </tr>
}

</table>

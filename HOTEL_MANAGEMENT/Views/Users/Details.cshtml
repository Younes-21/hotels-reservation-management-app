@using HOTEL_MANAGEMENT.Models
@model dynamic
@{ ViewBag.Title = "Details"; }

<h2 style="color: #1781A6; text-align:center; padding:4%"><b>Profil</b></h2>
<link href="~/Content/StyleDetailsUser.css" rel="stylesheet" type="text/css" media="screen" runat="server" />

<div class="page-content page-container" id="page-content" style="padding:6% 0 6% 0">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25" style="padding-bottom:5%;padding-top:7%"> <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image"> </div>
                                <h6 class="f-w-600">@Model.User.First_Name @Model.User.Last_Name</h6>
                                @*  <p>@(Model.User.Roles == true ? "Admin" : "User")</p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>*@
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h4 class="m-b-20 p-b-5 b-b-default f-w-600" style="color: #1781A6 ">Information</h4>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600" style="color: #1781A6 ">Email</p>
                                        <h6 class="text-muted f-w-400">@Model.User.Email</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600" style="color: #1781A6 ">Role</p>
                                        <h6 class="text-muted f-w-400">@(Model.User.Roles == true ? "Admin" : "User")</h6>
                                    </div>
                                </div>
                                <div class="row">
                                    @if (Model.User.Roles == false)
                                    {
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600" style="color: #1781A6 ">Number of Comments:</p>
                                            <h6 class="text-muted f-w-400">@Model.numberComment</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600" style="color: #1781A6 ">Number of Reservations:</p>
                                            <h6 class="text-muted f-w-400">@Model.numberReservetion</h6>
                                        </div>
                                    }
                                    else if (Model.User.Roles == true)
                                    {
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600" style="color: #1781A6 ">Number of Hotels:</p>
                                            <h6 class="text-muted f-w-400">@Model.numberHotel</h6>
                                        </div>
                                    }
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.User.Id_user }) |
    @Html.ActionLink("Back to List", "Index")
</p>

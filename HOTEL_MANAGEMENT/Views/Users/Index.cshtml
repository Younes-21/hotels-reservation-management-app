@model IEnumerable<HOTEL_MANAGEMENT.Models.User>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/StyleIndexUser.css" rel="stylesheet" type="text/css" media="screen" runat="server" />
<h2 style="color: #1781A6;padding: 40px 0;" class="text-center text-uppercase">List of all users</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <thead class="card">
        <tr class="container" style="color: #1781A6;">
            <th>
                @Html.DisplayNameFor(model => model.First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pwd)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Roles)
                </th>*@
            <th>
                Admin
            </th>
            <th></th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tbody class="card">
            <tr class="container">
                <td style="padding: 2% 1%;">
                    @Html.DisplayFor(modelItem => item.First_Name)
                </td>
                <td style="padding: 2% 1%;">
                    @Html.DisplayFor(modelItem => item.Last_Name)
                </td>
                <td style="padding: 2% 1%;">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td style="padding: 2% 1%;">
                    @if (Int32.Parse(Session["Id_user"].ToString()) == item.Id_user || item.Roles == false)
                    {
                        @Html.DisplayFor(modelItem => item.Pwd)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Pwd).GetHashCode()
                    }

                </td>
                <td style="padding: 2% 1%;">
                    @if (item.Roles.ToString().ToLower() != "true")
                    {
                        <i style="color: #1781A6 " class="fas fa-times"></i>
                    }
                    else
                    {
                        <i style="color: #1781A6 " class="fas fa-check"></i>
                    }
                </td>
                <td style="padding: 1.5% 0%;">
                    <a href="/Users/Details/@item.Id_user" class="Button btn"><i class="fas fa-info"></i></a>
                    <a href="/Users/Edit/@item.Id_user" class="Button btn"><i class="fas fa-edit"></i></a>
                    @if (item.Roles.ToString().ToLower() != "true")
                    {
                        <a href="/Users/Delete/@item.Id_user" class="Button btn"><i class="fas fa-trash-alt"></i></a>
                    }
                    else
                    {
                        <a href="/Users/Delete/@item.Id_user" class="Button btn disabled"><i class="fas fa-trash-alt"></i></a>
                    }

                    @*@if (Int32.Parse(Session["Id_user"].ToString()) == item.Id_user)
                    {
                        <a href="/Users/Edit/@item.Id_user" class="Button btn"><i class="fas fa-edit"></i></a>
                    }
                    else
                    {
                        <a href="/Users/Edit/@item.Id_user" class="Button btn disabled"><i class="fas fa-edit"></i></a>
                    }*@

                </td>
            </tr>
        </tbody>

    }

</table>